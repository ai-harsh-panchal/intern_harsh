<odoo>
    <data>
        <!-- inherit the res user model form view -->
        <record id="view_users_form_inherit_manager" model="ir.ui.view">
            <field name="name">res.users.form.inherit.manager</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="is_manager"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
