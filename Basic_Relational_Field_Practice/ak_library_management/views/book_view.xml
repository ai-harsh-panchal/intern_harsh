<odoo>
    <data>
        <!--
        This XML file defines the views and actions for the library book model.
        It includes:
        - A list view for displaying books
        - A form view for creating and editing book details
        - An action to open the book views
        -->

        <!-- List View of Book Model -->
        <record id="view_library_book_tree" model="ir.ui.view">
            <field name="name">library.book.list</field> <!-- Name of the list view -->
            <field name="model">library.book</field> <!-- Model associated with the view -->
            <field name="arch" type="xml">
                <list>
                    <field name="name"/> <!-- Book name -->
                    <field name="author"/> <!-- Book author -->
                    <field name="state"/> <!-- Book status -->
                    <field name="isbn"/> <!-- Book ISBN -->
                </list>
            </field>
        </record>

        <!-- Form View of Book Model -->
        <record id="view_library_book_form" model="ir.ui.view">
            <field name="name">library.book.form</field> <!-- Name of the form view -->
            <field name="model">library.book</field> <!-- Model associated with the view -->
            <field name="arch" type="xml">
                <form>
                    <header>
                        <label for="state" string="Status" /> <!-- Label for the status field -->
                        <field name="state" widget="statusbar" statusbar_visible="available,borrowed"/> <!-- Status bar widget -->
                    </header>
                    <sheet>
                        <div class="row">
                            <div class="col-6">
                                <group>
                                    <field name="name"/> <!-- Field for the book name -->
                                    <field name="author"/> <!-- Field for the book author -->
                                    <field name="state"/> <!-- Field for the book status -->
                                    <field name="isbn"/> <!-- Field for the book ISBN -->
                                    <field name="publication_date"/> <!-- Field for the publication date -->
                                    <field name="member_ids"/> <!-- Field for associated members -->
                                </group>
                            </div>
                            <div class="col-6">
                                <group>
                                    <field name="category_id"/> <!-- Field for the book category -->
                                    <field name="tag_ids" widget="many2many_tags"/> <!-- Tags associated with the book -->
                                    <field name="description"/> <!-- Field for the book description -->
                                </group>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for Books -->
        <record id="action_library_book" model="ir.actions.act_window">
            <field name="name">Books</field> <!-- Name of the action -->
            <field name="res_model">library.book</field> <!-- Model associated with the action -->
            <field name="view_mode">list,form</field> <!-- View modes available for this action -->
            <field name="view_id" ref="view_library_book_tree"/> <!-- Default view to open -->
        </record>
    </data>
</odoo>
