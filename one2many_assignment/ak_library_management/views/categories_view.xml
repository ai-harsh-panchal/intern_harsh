<odoo>
    <data>
        <!--
        This XML file defines the views and actions for the library category model.
        It includes:
        - A tree view for listing categories
        - A form view for creating and editing categories
        - An action to open the category views
        -->

        <!-- Tree View for Categories -->
        <record id="view_library_category_tree" model="ir.ui.view">
            <field name="name">library.category.list</field> <!-- Name of the tree view -->
            <field name="model">library.category</field> <!-- Model associated with the view -->
            <field name="arch" type="xml">
                <list>
                    <field name="name"/> <!-- Field to display in the tree view -->
                </list>
            </field>
        </record>

        <!-- Form View for Categories -->
        <record id="view_library_category_form" model="ir.ui.view">
            <field name="name">library.category.form</field> <!-- Name of the form view -->
            <field name="model">library.category</field> <!-- Model associated with the view -->
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/> <!-- Field for the category name -->
                            <field name="description"/> <!-- Field for the category description -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for Categories -->
        <record id="action_library_category" model="ir.actions.act_window">
            <field name="name">Categories</field> <!-- Name of the action -->
            <field name="res_model">library.category</field> <!-- Model associated with the action -->
            <field name="view_mode">list,form</field> <!-- View modes available for this action -->
        </record>
    </data>
</odoo>
