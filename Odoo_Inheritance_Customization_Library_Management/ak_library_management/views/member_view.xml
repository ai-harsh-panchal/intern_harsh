<odoo>
    <data>
        <!--
        This XML file defines the views and actions for the library member model.
        It includes:
        - A tree view for listing members
        - A form view for creating and editing member details
        - An action to open the member views
        -->

        <!-- Tree View for Members -->
        <record id="view_library_member_tree" model="ir.ui.view">
            <field name="name">library.member.tree</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                </list>
            </field>
        </record>

        <!-- Form View for Members -->
        <record id="view_library_member_form" model="ir.ui.view">
            <field name="name">library.member.form</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="membership_date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for Members -->
        <record id="action_library_member" model="ir.actions.act_window">
            <field name="name">Members</field>
            <field name="res_model">library.member</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
